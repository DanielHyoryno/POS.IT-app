{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,
  "installCommand": "composer install --no-dev --prefer-dist --optimize-autoloader && npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "functions": {
    "api/index.php": { "runtime": "vercel-php@0.7.4" }
  },
  "routes": [
    { "src": "/build/(.*)", "dest": "/build/$1" },
    { "src": "/(favicon\\.ico|robots\\.txt)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://pos-it-app.vercel.app",
    
    "LOG_CHANNEL": "stderr",
    "LOG_LEVEL": "info",
    "SESSION_DRIVER": "cookie",
    "CACHE_STORE": "array",
    "QUEUE_CONNECTION": "sync",
    "VIEW_COMPILED_PATH": "/tmp",

    "DB_CONNECTION": "mysql",
    "DB_HOST": "switchyard.proxy.rlwy.net",
    "DB_PORT": "29206",
    "DB_DATABASE": "railway",
    "DB_USERNAME": "root",
    "DB_PASSWORD": "JGWxPbfuJMATjSKrQJhFMBThfidkUVpt"
  }
}
